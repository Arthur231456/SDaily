<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/hour"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="@color/md_theme_light_shadow"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text=":"
        android:textAlignment="center"
        android:textColor="@color/md_theme_light_shadow"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="@color/md_theme_light_shadow"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plus_hour"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toTopOf="@+id/hour"
        app:layout_constraintEnd_toEndOf="@+id/hour"
        app:layout_constraintStart_toStartOf="@+id/hour"
        app:tint="@color/md_theme_light_primary" />

    <ImageView
        android:id="@+id/minus_hour"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/minus"
        app:layout_constraintEnd_toEndOf="@+id/hour"
        app:layout_constraintStart_toStartOf="@+id/hour"
        app:layout_constraintTop_toBottomOf="@+id/hour"
        app:tint="@color/md_theme_light_primary" />

    <ImageView
        android:id="@+id/plus_minute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toTopOf="@+id/minute"
        app:layout_constraintEnd_toEndOf="@+id/minute"
        app:layout_constraintStart_toStartOf="@+id/minute"
        app:tint="@color/md_theme_light_primary" />

    <ImageView
        android:id="@+id/minus_minute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/minus"
        app:layout_constraintEnd_toEndOf="@+id/minute"
        app:layout_constraintStart_toStartOf="@+id/minute"
        app:layout_constraintTop_toBottomOf="@+id/minute"
        app:tint="@color/md_theme_light_primary" />
</androidx.constraintlayout.widget.ConstraintLayout>